{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container security-form">
    <div class="login-form">
        <h1>Register</h1>
        {{ form_errors(registrationForm) }}
        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.firstname, {'attr': {'class': 'form form-control', 'placeholder': 'Nom'}}) }}
            {{ form_row(registrationForm.lastname, {'attr': {'class': 'form-control', 'placeholder': 'Pr√©nom'}}) }}
            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
            {{ form_row(registrationForm.plainPassword, {
                'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}

            <button type="submit" class="btn btn btn-block btn-primary btn-sm w-100">Register</button>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}
